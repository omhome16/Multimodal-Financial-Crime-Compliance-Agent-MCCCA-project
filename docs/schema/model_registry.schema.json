{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModelRegistry",
  "type": "object",
  "properties": {
    "model_id": { "type": "string", "format": "uuid" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "type": { "type": "string", "enum": ["nlp", "cv", "multimodal", "tabular"] },
    "description": { "type": "string" },
    "storage_location": { "type": "string", "format": "uri" },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["model_id", "name", "version", "type"]
}