{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SystemLog",
  "type": "object",
  "properties": {
    "log_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "level": { "type": "string", "enum": ["info", "warning", "error", "debug"] },
    "message": { "type": "string" },
    "context": { "type": "object" }
  },
  "required": ["log_id", "timestamp", "level", "message"]
}